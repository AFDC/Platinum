!!! 5
%html
  %head
    %title
      = specified_title = yield(:title)
      = " | " unless specified_title.blank?
      Atlanta Flying Disc Club
    = favicon_link_tag
    = stylesheet_link_tag 'http://www.afdc.com/bootstrap/css/bootstrap.min.css'
    = stylesheet_link_tag 'http://www.afdc.com/datepicker/css/datepicker.css'
    = stylesheet_link_tag '/css/cerulean.css'
    = stylesheet_link_tag 'http://www.afdc.com/bootstrap/css/bootstrap-responsive.min.css'
    = stylesheet_link_tag 'http://www.afdc.com/tablesort/themes/blue/style.css'
    = stylesheet_link_tag '/css/autocomplete.css'
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js'
    = javascript_include_tag 'http://www.afdc.com/bootstrap/js/bootstrap.min.js'
    = javascript_include_tag 'http://www.afdc.com/tablesort/jquery.metadata.js'
    = javascript_include_tag 'http://www.afdc.com/tablesort/jquery.tablesorter.js'
    = javascript_include_tag 'http://www.afdc.com/js/jquery.autocomplete.js'
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=true'
    = javascript_include_tag 'http://www.afdc.com/gmaps/gmaps.js'
    = javascript_include_tag '/js/userSelector.js'

    = javascript_include_tag "application"

    = yield :page_scripts

    = csrf_meta_tags
  %body
    #navBar.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand
            AFDC League Manager
          .nav-collapse
            %ul.nav
              %li= link_to 'Home', '/'
              %li= link_to 'Leagues', '/leagues'
              %li= link_to 'Users', '/users'
              %li= link_to 'Teams', '/teams'
              %li= link_to 'Fields', '/fields'
              %li= link_to 'Games', '/schedules'
            %ul.nav.pull-right
              - if current_user
                %li
                  = link_to registrations_user_path(current_user) do
                    %span.badge
                      %i.icon.icon-shopping-cart
                %li#loggedInMenu.dropdown
                  = link_to '#loggedInMenu', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown' do
                    = "Logged in as: #{current_user.firstname} #{current_user.lastname}"
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'User Dashboard', '/home'
                    %li= link_to 'Your Profile', '/profile'
                    %li.divider
                    %li= link_to 'Log out', '/logout'
              - else
                %li= link_to 'Log In', auth_path
    - unless Rails.env.production?
      .alert.alert-success{:style => 'margin: 0 5px;'}= "Current Rails Environment: #{Rails.env}"
    .container
      - if flash[:notice]
        .alert.alert-info= flash[:notice]
      - if flash[:error]
        .alert.alert-error= flash[:error]
      = yield
      - if Rails.env.development?
        %div{style: 'margin-top: 50px'}
          = debug(params) 

    #loginModal.modal.hide.fade
